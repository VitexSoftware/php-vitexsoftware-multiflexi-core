{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/VitexSoftware/php-vitexsoftware-multiflexi-core/refs/heads/main/multiflexi.app.schema.json",
  "schemaVersion": "3.0.0",
  "title": "MultiFlexi App Definition",
  "type": "object",
  "$defs": {
    "localizedString": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "minProperties": 1,
          "properties": {
            "en": {
              "type": "string"
            },
            "cs": {
              "type": "string"
            },
            "sk": {
              "type": "string"
            },
            "de": {
              "type": "string"
            },
            "fr": {
              "type": "string"
            },
            "es": {
              "type": "string"
            },
            "it": {
              "type": "string"
            },
            "pl": {
              "type": "string"
            },
            "nl": {
              "type": "string"
            },
            "pt": {
              "type": "string"
            },
            "sv": {
              "type": "string"
            },
            "fi": {
              "type": "string"
            },
            "da": {
              "type": "string"
            },
            "no": {
              "type": "string"
            },
            "hu": {
              "type": "string"
            },
            "ro": {
              "type": "string"
            },
            "bg": {
              "type": "string"
            },
            "el": {
              "type": "string"
            },
            "tr": {
              "type": "string"
            },
            "hr": {
              "type": "string"
            },
            "sl": {
              "type": "string"
            },
            "et": {
              "type": "string"
            },
            "lt": {
              "type": "string"
            },
            "lv": {
              "type": "string"
            },
            "ru": {
              "type": "string"
            },
            "uk": {
              "type": "string"
            },
            "ja": {
              "type": "string"
            },
            "zh": {
              "type": "string"
            },
            "ko": {
              "type": "string"
            },
            "ar": {
              "type": "string"
            },
            "he": {
              "type": "string"
            },
            "hi": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      ]
    }
  },
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri",
      "$comment": "Schema file location",
      "description": "Schema file location.",
      "default": "https://raw.githubusercontent.com/VitexSoftware/php-vitexsoftware-multiflexi-core/refs/heads/main/multiflexi.app.schema.json"
    },
    "image": {
      "type": "string"
    },
    "title": {
      "$ref": "#/$defs/localizedString"
    },
    "name": {
      "$ref": "#/$defs/localizedString"
    },
    "description": {
      "$ref": "#/$defs/localizedString"
    },
    "author": {
      "type": "string",
      "description": "Author of the application."
    },
    "license": {
      "type": "string",
      "description": "License identifier or URL."
    },
    "category": {
      "type": "string",
      "description": "Category of the application."
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Keywords or tags related to the application."
    },
    "homepage": {
      "type": "string",
      "format": "uri"
    },
    "uuid": {
      "type": "string",
      "format": "uuid"
    },
    "version": {
      "type": "string",
      "description": "Application version."
    },
    "schemaVersion": {
      "type": "string",
      "description": "Schema version used by this application."
    },
    "ociimage": {
      "type": "string",
      "description": "OCI image reference for the application.",
      "pattern": "^[\\w./:-]+(:[\\w.-]+)?$"
    },
    "executable": {
      "type": "string"
    },
    "cmdparamsTemplate": {
      "type": "string",
      "description": "Command line template supporting placeholders like ${VAR}."
    },
    "environment": {
      "type": "object",
      "description": "Configuration keys required by the application.",
      "patternProperties": {
        "^[A-Z0-9_]+$": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "string",
                "file-path",
                "email",
                "url",
                "integer",
                "float",
                "bool",
                "password",
                "set",
                "text"
              ],
              "description": "The data type of the environment variable."
            },
            "category": {
              "type": "string",
              "enum": [
                "API",
                "Database",
                "Behavior",
                "Security",
                "Other"
              ],
              "description": "Group or category of this configuration key."
            },
            "description": {
              "$ref": "#/$defs/localizedString"
            },
            "hint": {
              "$ref": "#/$defs/localizedString"
            },
            "defval": {},
            "required": {
              "type": "boolean"
            },
            "options": {
              "type": [
                "object",
                "array"
              ]
            }
          },
          "additionalProperties": true
        }
      }
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "description": {
            "$ref": "#/$defs/localizedString"
          }
        },
        "required": [
          "name",
          "path",
          "type"
        ],
        "additionalProperties": false
      }
    },
    "produces": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "type": "object",
          "properties": {
            "description": {
              "$ref": "#/$defs/localizedString"
            },
            "patterns": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "format": {
              "type": "string",
              "enum": [
                "file",
                "json",
                "text",
                "url",
                "custom"
              ]
            }
          },
          "required": [
            "format"
          ]
        }
      }
    },
    "consumes": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "type": "object",
          "properties": {
            "description": {
              "$ref": "#/$defs/localizedString"
            },
            "required": {
              "type": "boolean",
              "default": true
            },
            "format": {
              "type": "string",
              "enum": [
                "file",
                "json",
                "text",
                "url",
                "custom"
              ]
            }
          },
          "required": [
            "format"
          ]
        }
      }
    }
  },
  "required": [
    "$schema",
    "name",
    "description",
    "executable",
    "environment"
  ],
  "additionalProperties": true
}